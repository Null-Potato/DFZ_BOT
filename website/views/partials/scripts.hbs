<script src="http://code.jquery.com/jquery-1.11.0.min.js"></script>
<script>
    function copyToClipboard() {
        var $temp = $("<textarea></textarea>");
        $("body").append($temp);
        $temp.val($("#joinMessage").val()).select();
        document.execCommand("copy");
        $temp.remove();
    }
</script>